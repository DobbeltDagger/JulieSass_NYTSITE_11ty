{% extends "base.njk" %}

{% block mainContent %}

  <div class="workSingleWrapper">

    <div>
      <img src="/assets/images/archive/galleries/{{ galleryFolder }}/{{ imgUrl}}" />
      {{ content | safe }}
    </div>

    <!-- gallery -->
    <div>
      {% if gallery.length > 0 %}
        <div class='galleryWrapper'>
          {% for thumb in gallery %}
            <div class="galleryImg">
              <img src="/assets/images/archive/galleries/{{ galleryFolder }}/thumbs/{{ thumb.imgUrl }}"/>
              {% if thumb.caption !== "" %}
                <div class="txt">{{ thumb.caption }}</div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>

  </div>

{% endblock mainContent %}